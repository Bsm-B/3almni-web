{%  extends '@Almni/Admin/base.html.twig' %}
{% block body %}

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Ajouter Evenement</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Evenement</a></li>
                    <li class="breadcrumb-item active">Ajouter Evenement</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    {{ form_start(edit_form,{'attr':{'class':'floating-labels m-t-40'}}) }}
                    <div class="form-group m-b-40">
                        <label for="input6">Nom</label>
                        {{ form_widget(edit_form.nom,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Description</label>
                        {{ form_widget(edit_form.description,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Date</label>
                        {{ form_widget(edit_form.date,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Lieu</label>
                        {{ form_widget(edit_form.lieu,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Organizateur</label>
                        {{ form_widget(edit_form.organizateur,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Image</label>
                        {{ form_widget(edit_form.image,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>

                    <div>

                        <input type="submit" value="Modifier" />
                    </div>
                    {{ form_end(edit_form) }}
                    <ul>
                        <li>
                            <a href="{{ path('affEvent') }}">Affichage</a>
                        </li>

                    </ul>

                </div>
            </div>
        </div>
    </div>



{% endblock %}