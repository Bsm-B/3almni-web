{% block body %}


    <div class="row">
        <div class="col-12">


            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h4 class="text-themecolor">Dashboard</h4>
                </div>
                <div class="col-md-7 align-self-center text-right">
                    <div class="d-flex justify-content-end align-items-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                            <li class="breadcrumb-item active">Note</li>
                        </ol>

                        <a href="{{ path('note_new') }}">  <button type="button" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Ajouter Note</button></a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Note</h4>
                    <h6 class="card-subtitle">Liste des notes</h6>
                    <div class="table-responsive m-t-40">
                        <table id="example23"
                               class="display nowrap table table-hover table-striped table-bordered"
                               cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Matiere </th>
                                <th>Formule </th>
                                <th>Classe</th>
                                <th>Etudent</th>
                                <th>Prof</th>
                                <th>Note</th>
                                <th>Remarque</th>
                                <th>Détaillé</th>
                                <th>Modifier</th>
                            </tr>
                            </thead>

                            <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Matiere </th>
                                <th>Formule </th>
                                <th>Classe</th>
                                <th>Etudent</th>
                                <th>Prof</th>
                                <th>Note</th>
                                <th>Remarque</th>
                                <th>Détaillé</th>
                                <th>Modifier</th>
                            </tr>
                            </tfoot>

                            <tbody>
                            {% for note in notes %}
                                <tr>

                                    <td>{{ note.id }}</td>
                                    <td>{{ note.idmatiere }}</td>
                                    <td>{{ note.formule }}</td>
                                    <td>{{ note.idclasse }}</td>
                                    <td>{{ note.idetudent }}</td>
                                    <td>{{ note.idprof }}</td>
                                    <td>{{ note.note }}</td>
                                    <td>{{ note.remarque }}</td>
                                    <td>  <a href="{{ path('note_show', { 'id': note.id }) }}">Détaillé</a></td>
                                    <td> <a href="{{ path('note_edit', { 'id': note.id }) }}">Modifier</a></td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>


