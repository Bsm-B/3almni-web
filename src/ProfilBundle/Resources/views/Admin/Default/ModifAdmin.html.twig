{%  extends '@Almni/Admin/base.html.twig' %}
{% block body %}
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Ajouter Admin</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Admin</a></li>
                    <li class="breadcrumb-item active">Ajouter Admin</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    {{ form_start(edit_form,{'attr':{'class':'floating-labels m-t-40'}}) }}
                    <div class="form-group m-b-40">
                        <label for="input6">Nom</label>
                        {{ form_widget(edit_form.nom,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Prenom</label>
                        {{ form_widget(edit_form.prenom,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Date Naissance</label>
                        {{ form_widget(edit_form.datenaiss) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Adresse </label>
                        {{ form_widget(edit_form.adress,{'attr':{'class':'form-control p-0','id':'input6'}}) }}

                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Telephone</label>
                        {{ form_widget(edit_form.tel,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Poste</label>
                        {{ form_widget(edit_form.poste,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>
                    <div class="form-group m-b-40">
                        <label for="input6">Cin</label>
                        {{ form_widget(edit_form.cin,{'attr':{'class':'form-control p-0','id':'input6'}}) }}
                        <span class="bar"></span>
                    </div>

                    <div>
                        <button class="btn waves-effect waves-light btn-secondary" type="submit">Modifier</button>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

